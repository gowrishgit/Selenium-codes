<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
<Property name="basePath">./logs</Property>
</Properties>
	<Appenders>
		//Print the log in the file
		<RollingFile name="File" fileName="${basePath}/prints.log"
			filePattern="${basePath}/prints-%d{yyyy-MM-dd}.log">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
			<SizeBasedTriggeringPolicy size="500" /> //When it reaches 500 kb new file is created
		</RollingFile>
		
		//Print the log in the console
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
	</Appenders>

	<Loggers>
		//Logger message for just one file
		<Logger name="Log4j_Alpha.Demo" level="error" additivity="false">
			<AppenderRef ref="File" />
		</Logger>

		<Root level="trace">
			//error or trace error for only error log, trace for all logs
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>